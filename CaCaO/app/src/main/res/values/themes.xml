<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CaCaO" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- ActionBar 를 Custom 하기위한 Theme 선언하기 -->
    <style name="Theme.CaCaO.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.CaCaO.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <!-- MainActivity가 실행되면 상단에 ActionBar가 나타난다
     자동 ActionBar는 Custom이 어렵기 때문에 기존 Action를 감추고 새로운 Action바를 만들어 사용할 것이다
     기본 Activity 화면에서 자동 ActionBar 를 감추고 새로사용할 ActionBar를 지정
     -->
    <style name="Theme.CaCaO.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>